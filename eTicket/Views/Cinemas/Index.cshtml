@model IEnumerable<Cinema>

@{
    ViewData ["Title"] = "List of Cinemas";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class = "table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.CinemaLogoURL)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>     
                @if (Model != null){    
                @foreach(var producer in Model){
                    <tr>
                    <td class="align-middle">
                        <img class="rounded-circle" src="@producer.CinemaLogoURL" alt="@producer.Name" style="max-width: 150px" />
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => producer.Name)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => producer.Description)
                    </td>
                    <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@producer.Id"><i class="bi bi-pencil-square"></i>Edit </a> |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@producer.Id"><i class="bi bi-trash"></i>Delete </a>
                    </td>
                </tr>
                }
                }
            </tbody>
        </table>
    </div>
</div>