@model IEnumerable<Producer>

@{
    ViewData ["Title"] = "List of Producers";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class = "table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.ProfilePictureURL)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Bio)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>     
                @if (Model != null){    
                @foreach(var producer in Model){
                    <tr>
                    <td class="align-middle">
                        <img class="rounded-circle" src="@producer.ProfilePictureURL" alt="@producer.Name" style="width: 150px ; height: 150px" />
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => producer.Name)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => producer.Bio)
                    </td>
                    <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@producer.Id"><i class="bi bi-pencil-square"></i>Edit </a> |
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@producer.Id"><i class="bi bi-eye"></i>Details </a> |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@producer.Id"><i class="bi bi-trash"></i>Delete </a>
                    </td>
                </tr>
                }
                }
            </tbody>
        </table>
    </div>
</div>

<div style = "position : fixed ;right :25px ; bottom :65px" class="text-white">
    <a asp-action="Create" class="btn btn-success float-end">
         <i class="bi bi-plus-circle"></i>
    Add New</a>
</div>